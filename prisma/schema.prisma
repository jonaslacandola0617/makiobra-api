datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/client"
}

model Job {
    id String @id @unique @default(uuid()) @db.Uuid
    jobTitle String 
    description String 
    salary Int

    city String 
    province String 
    country String 


    createdAt DateTime @default(now())
    // Employer, Employer Id
    // Company, Company Id
    // Skills 
}

